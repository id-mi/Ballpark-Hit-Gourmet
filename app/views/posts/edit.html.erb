<h1>ポストの編集</h1>
<% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @post, local: true do |f| %>
  <h4>グルメ名</h4>
    <%= f.text_field :gourme_name %>
  <h4>店名</h4>
    <%= f.text_field :shop_name %>  
  <h4>価格（税込）</h4>
    <%= f.text_field :price %>
  <h4>感想</h4>  
    <%= f.text_area :content %>
  <h4>画像</h4>
    <%= f.file_field :image %><br>
  <%= f.submit "保存する" %>    
<% end %>